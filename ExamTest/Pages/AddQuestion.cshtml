@page
@model ExamTest.Pages.AddQuestionModel
@{
    ViewData["Title"] = "AddQuestion";
}

@if (Model.flag)
{
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>You successfully added a new question. Would you like to add another ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary"  data-dismiss="modal">YES</button>
                    <button type="button" class="btn btn-secondary" href="/index">NO</button>
                </div>
            </div>
        </div>
    </div>
}


<h1>Hi there. Welcome to Managing Questions</h1>

<h3>Please add an <span style="color:red;">@Model.type</span> Question</h3>
<form method="post">
    <div id="q1">
        <div class="form-group">
            <label for="exampleFormControlInput1">What's the question</label>
            <input type="text" class="form-control" asp-for="@Model.question.question" id="exampleFormControlInput1">
            <label for="exampleFormControlInput1">What's the Answer</label>
            <input type="text" class="form-control" asp-for="@Model.Answer">
            <input type="hidden" asp-for="@Model.question.type" value="@Model.type" />
        </div>
    </div>
    <button type="submit"> Submit</button>
</form>

